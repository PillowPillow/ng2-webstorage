{
	"compileOnSave": false,
	"compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "ngx-webstorage": [
        "dist/ngx-webstorage/ngx-webstorage",
        "dist/ngx-webstorage"
      ],
      "ngx-webstorage-cross-storage": [
        "dist/ngx-webstorage-cross-storage/ngx-webstorage-cross-storage",
        "dist/ngx-webstorage-cross-storage"
      ]
    },
    "useDefineForClassFields": false
  },
	"angularCompilerOptions": {
	  "enableI18nLegacyMessageIdFormat": false,
	  "strictInjectionParameters": true,
	  "strictInputAccessModifiers": true,
	  "strictTemplates": true
	}
}
